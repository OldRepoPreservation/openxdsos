<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>openxds</artifactId>
		<groupId>org.openhealthtools.openxds</groupId>
		<version>2.0.0</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<artifactId>openxds-registry-adapter-omar</artifactId>
	<packaging>jar</packaging>
	<name>OpenXDS - Registry Omar 3.1 Adapter</name>

	<build>
		<defaultGoal>install</defaultGoal>
		<resources>
		</resources>
		<plugins>
			<plugin>
				<groupId>com.google.code.maven-license-plugin</groupId>
				<artifactId>maven-license-plugin</artifactId>
				<configuration>
					<header>${project.parent.basedir}/src/main/resources/header.txt</header>
					<excludes>
						<exclude>**/*.bat</exclude>
						<exclude>**/ehcache.xml</exclude>
						<exclude>**/repository.datasource.cfg.xml</exclude>
						<exclude>**/repository.hbm.xml</exclude>
						<exclude>**/repository.jdbc.cfg.xml</exclude>
						<exclude>**/*.properties</exclude>
					</excludes>
					<executions>
						<execution>
							<goals>
								<goal>check</goal>
							</goals>
						</execution>
					</executions>
				</configuration>
			</plugin>
		</plugins>
	</build>

